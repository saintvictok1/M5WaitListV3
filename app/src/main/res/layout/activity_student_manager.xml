<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentManagerActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme"
        android:background="@color/OrangeRed">


        <TextView
            android:id="@+id/CourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Entry"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/addstudententry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Red_FireBrick"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Add"
            android:textColorHint="@color/Black_transparent_black_percent_45"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textStyle="bold" />

        <Button
            android:id="@+id/studententrybackbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Red_FireBrick"
            android:layout_weight="1"
            android:text="Back"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Selection"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/Red_FireBrick"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/StudentCourseSPN"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:spinnerMode="dropdown"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Student Name"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/Red_FireBrick"
        android:layout_gravity="center"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/StudentNameET"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextborder"
        android:gravity="center"
        android:textSize="20sp"
        android:hint="John Smith"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Priority"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/Red_FireBrick"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/StudentPrioritySPN"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:spinnerMode="dropdown"
        android:textStyle="bold"/>
</LinearLayout>